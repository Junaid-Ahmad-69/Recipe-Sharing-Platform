header.header
    .header__logo
        if user
            a.nav__el.header-nav-logo(href='/recipes')
                img(src='/img/recipe-logo.png', alt='Recipes logo')
            .post-item_container
                a.post-recipe.btn.btn--green(href='/recipe')
                    svg.card__icon.card__icon_post
                        use(xlink:href='img/icons.svg#icon-send')
                        span Post a Recipe
                a.btn.btn--green.btn-logout(href="/") Log out
        else
            .div
                a.nav__el.nav__el--cta(href="/signup") Sign Up
                a.nav__el(href="/") Log in